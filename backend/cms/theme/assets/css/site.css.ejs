
body {
  font-size:14px;
  color:#666;
}

footer {
  text-align: center;
  height: 60px;
  background-color: #343D46;
  color: #FFF;
}

footer .small {
  font-size: 12px;
  line-height: 16px;
  margin-top: 25px;
}

footer .small a:hover{
  color: white;
}

.navbar-default{
  background: #343D46;
  z-index:1;
}

.navbar-default .navbar-brand {
  height:50px;
  display:flex;
  align-items:center;
  color: #C3D4E7;
  text-shadow: rgba(255, 255, 255, 0.2) 0 1px 0;
  text-transform: uppercase;
}

.navbar-default .navbar-brand .logo{
  height:32px;
  margin-right:5px;
}

.navbar-default .github img{
  height: 16px;
  margin-top: -4px;
}

.navbar-default .navbar-nav>li>a{
  color: white;
  text-shadow: rgba(255, 255, 255, 0.2) 0 1px 0;
  text-transform: uppercase;
}

.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:focus {
  color: white;
  background-color: #4D555C;
}

.navbar-default .navbar-nav>li>a:focus, .navbar-default .navbar-nav>li>a:hover {
  background-color: #EEE;
}

.container-site{
  padding-top: 70px;
}

section .project{
  text-align:center;
}

section .project .features{
  margin-top: 40px;
}

.btn-default,.btn-default:focus{
  color: #C3D4E7;
  background-color: #4D555C;
  border: 1px solid #2e3135;
  background: linear-gradient(#4D555C,#1c1e21);
  border-radius: 2px;
  transition: all 0.4s ease-in;
  outline: 0;
}

.btn-default:hover {
  color: white;
}

.btn-warning,.btn-warning:focus{
  outline: 0;
}

.sidebar{
  margin: 20px 0;
}

.article-list .media{
  border-bottom: 1px solid #f0f0f0;
  padding:10px 0;
}

.article-list .media-object{
  width:125px;
  height:100px;
  border-radius: 4px;
  border: 1px solid #f0f0f0;
}
